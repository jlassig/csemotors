<!-- Content heading -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<!-- message block: -->
<%- messages() %>

<div class="body-div">
  <p class="p-font">All Fields are required</p>
  <form action="/account/register" method="post" class="account-form">
    <label for="account_firstname">First Name:</label>
    <input
      type="text"
      id="fname"
      class="input"
      name="account_firstname"
      value="<%= locals.account_firstname %>"
      required />

    <label for="account_lastname">Last Name:</label>
    <input
      type="text"
      id="lname"
      class="input"
      name="account_lastname"
      value="<%= locals.account_lastname %>"
      required />

    <label for="account_email">Email:</label>
    <input
      type="email"
      id="email"
      class="input"
      name="account_email"
      required
      value="<%= locals.account_email %>"
      placeholder="Enter a valid email address"
       />

    <label for="account_password">Password:</label>
    <input
      type="password"
      id="password"
      class="input"
      name="account_password"
      required
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" />
    <div class="p-font password-rules">
      <i>
        Passwords must be minimum of 12 characters and include 1 capital letter,
        1 number and 1 special character.
      </i>
    </div>

    <button type="submit" class="form-button">Register</button>
  </form>
</div>

<script src="/js/script.js"></script>
